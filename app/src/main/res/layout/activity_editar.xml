<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Botón atrás -->
        <ImageButton
            android:id="@+id/boton_flecha_atras"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@android:color/transparent"
            android:src="@drawable/boton_flecha_atras"
            android:layout_gravity="start"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp" />

        <!-- Imagen de perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/avatar_circle"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_img" />

        </LinearLayout>

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar Usuario"
            android:textSize="28sp"
            android:fontFamily="@font/bebasneue_regular"
            android:textStyle="bold"
            android:textColor="@color/colorBlanco"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"/>

        <!-- Contenedor de inputs -->

        <!-- Botón Limpiar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorFondo"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingTop="5dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <!-- Nombre -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Nombre *"
                android:textColor="@color/colorBlanco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_registrar"
                android:hint="Ingresá el nombre"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/colorInput" />

            <!-- Apellido -->
            <TextView
                android:id="@+id/tvApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Apellido *"
                android:textColor="@color/colorBlanco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputApellido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_registrar"
                android:hint="Ingresá el apellido"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="#454141"
                android:textColorHint="@color/colorInput" />

            <!-- DNI -->
            <TextView
                android:id="@+id/tvDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="DNI *"
                android:textColor="@color/colorBlanco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputDNI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_registrar"
                android:hint="Ingresá el DNI"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="#454141"
                android:textColorHint="@color/colorInput" />

            <!-- Fecha de nacimiento -->
            <TextView
                android:id="@+id/tvFechaDeNacimiento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Fecha de nacimiento *"
                android:textColor="@color/colorBlanco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputFecha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_registrar"
                android:hint="Ingresá la fecha"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="#454141"
                android:textColorHint="@color/colorInput" />

            <!-- Teléfono -->
            <TextView
                android:id="@+id/tvTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Teléfono *"
                android:textColor="@color/colorBlanco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_registrar"
                android:hint="Ingresá el teléfono"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="#454141"
                android:textColorHint="@color/colorInput" />

            <!-- Correo -->
            <TextView
                android:id="@+id/tvCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:text="Correo *"
                android:textColor="@color/colorBlanco"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/inputCorreo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_input_registrar"
                android:hint="Ingresá el correo"
                android:paddingStart="12dp"
                android:paddingTop="8dp"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="#454141"
                android:textColorHint="@color/colorInput" />

        </LinearLayout>

        <Button
            android:id="@+id/btnLimpiar"
            android:text="Limpiar campos   X"
            android:textAllCaps="false"
            android:fontFamily="@font/nunito_bold"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRojoSaturado"
            android:background="@android:color/transparent"
            android:layout_gravity="start"
            android:layout_marginTop="6dp"
            android:layout_marginStart="6dp"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />


        <!-- Botones -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">


            <Button
                android:id="@+id/btnGuardarEdicion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Guardar"
                android:textSize="16sp"
                android:textColor="@color/colorBlanco"
                android:background="@drawable/btn_agregar_socio"
                android:textAllCaps="false"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_rectangulo" />
    </LinearLayout>
</ScrollView>
