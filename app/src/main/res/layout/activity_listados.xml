<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondo"
        android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:clipChildren="true"
            android:clipToPadding="false">

            <TextView
                android:id="@+id/txtTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:fontFamily="@font/bebasneue_regular"
                android:letterSpacing="0.05"
                android:text="@string/listados"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="42sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Contenedor general de botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="20dp"
            android:layout_marginTop="32dp">

            <!-- Botón 1 -->
            <LinearLayout
                android:id="@+id/btnSociosVencidos"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_borde_rojo"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneue_regular"
                    android:gravity="center"
                    android:text="@string/socios_vencidos"
                    android:textColor="@color/colorBlanco"
                    android:textSize="30sp" />
            </LinearLayout>

            <!-- Botón 2 -->
            <LinearLayout
                android:id="@+id/btnListadoSocios"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/btn_borde_rojo"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="129dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneue_regular"
                    android:gravity="center"
                    android:text="@string/listado_socios"
                    android:textColor="@color/colorBlanco"
                    android:textSize="30sp" />
            </LinearLayout>

            <!-- Botón 3 -->
            <LinearLayout
                android:id="@+id/btnListadoNoSocios"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/btn_borde_rojo"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bebasneue_regular"
                    android:gravity="center"
                    android:text="@string/listado_no_socios"
                    android:textColor="@color/colorBlanco"
                    android:textSize="30sp" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnVolver"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/btn_borde_rojo"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/volver"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


        <!-- ESPACIADOR para empujar el contenido inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <!-- Fondo inferior -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="12dp"
            android:scaleType="fitXY"
            android:src="@drawable/bg_rectangulo" />

    </LinearLayout>
    </ScrollView>
