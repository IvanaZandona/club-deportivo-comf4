<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/fila_borde">




    <!-- Columna Nombre -->
    <TextView
        android:id="@+id/tvNombre"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="Nombre"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <!-- Columna DNI -->
    <TextView
        android:id="@+id/tvDni"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="DNI"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <!-- Columna Fecha Alta -->
    <TextView
        android:id="@+id/tvFechaAlta"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Fecha Alta"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <!-- Columna Vencimiento -->
    <TextView
        android:id="@+id/tvVencimiento"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Vto"
        android:textSize="12sp"
        android:textColor="@android:color/black" />

    <!-- Icono Email -->
    <ImageView
        android:id="@+id/ivEmail"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:src="@drawable/baseline_attach_email_24"
        android:contentDescription="Enviar email"
        android:tint="@color/colorRojo" />

</LinearLayout>
