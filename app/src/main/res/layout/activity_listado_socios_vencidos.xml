<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:padding="16dp">

    <!-- Icono volver -->
    <ImageView
        android:id="@+id/iconoVolver"
        app:tint="@color/colorRojo"
        android:layout_width="47dp"
        android:layout_height="45dp"
        android:layout_gravity="start"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:src="@drawable/ic_volver2" />

    <!-- TÃ­tulo -->
    <TextView
        android:id="@+id/txtTitulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bebasneue_regular"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:text="@string/socios_vencidos"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <!-- ðŸ”² CAJA COMPLETA: encabezado + recycler -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/fondo_tabla_redondeado"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Encabezado de la tabla -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorRojoSaturado"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:fontFamily="@font/nunito_bold"
                android:text="Nombre"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="DNI"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="Alta"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_bold"
                android:text="Vto"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- LISTA DINÃMICA -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerSociosVencidos"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBlanco"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            />

    </LinearLayout>


    <!-- BOTÃ“N PAGOS -->
    <Button
        android:id="@+id/btnPagos"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/btn_borde_rojo"
        android:text="@string/ir_a_pagos"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:padding="12dp"/>

</LinearLayout>
