<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo">

    <!-- Fondo superior fijo detrÃ¡s del comprobante -->
    <ImageView
        android:id="@+id/fondoSuperior"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_rectangulo"
        android:layout_gravity="top" />

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal" >

            <!-- Icono volver -->
            <ImageView
                android:id="@+id/iconoVolver"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_volver2"
                android:contentDescription="@string/volver"
                android:clickable="true"
                android:focusable="true"
                app:tint="@color/colorFondo"
                android:foreground="?attr/selectableItemBackground"
                android:layout_gravity="start" />

            <!-- Recuadro blanco del comprobante -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_white"
                android:elevation="6dp"
                android:layout_marginTop="-0dp"
                android:layout_marginBottom="30dp"
                android:layout_marginHorizontal="20dp"
                android:clipToOutline="true" >

                <!-- Encabezado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/bg_top_gray"
                    android:paddingVertical="16dp"
                    android:layout_marginBottom="12dp" >

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@drawable/ic_circle_check"
                        app:tint="@color/colorVerdee" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pagoExitoso"
                        android:textColor="@color/colorNegro"
                        android:textSize="20sp"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <!-- Datos del comprobante -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="@string/comprobanteNro"
                    android:textSize="18sp"
                    android:textColor="@color/colorNegro"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/fechaEmision"
                            android:textColor="@color/colorNegro"
                            android:fontFamily="@font/nunito_semibold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/emisionPago"
                            android:textColor="@color/colorNegro"
                            android:textSize="14sp"
                            android:fontFamily="@font/nunito_regular" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ubicacionTitulo"
                            android:textSize="14sp"
                            android:textColor="@color/colorNegro"
                            android:fontFamily="@font/nunito_semibold" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ubicacion"
                            android:textSize="14sp"
                            android:textColor="@color/colorNegro"
                            android:fontFamily="@font/nunito_regular" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrisOscuro"
                    android:layout_marginVertical="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="@string/cliente"
                    android:textSize="14sp"
                    android:textColor="@color/colorNegro"
                    android:fontFamily="@font/nunito_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="@string/clienteNombre"
                    android:textSize="14sp"
                    android:textColor="@color/colorNegro"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="@string/vencimiento"
                    android:textSize="14sp"
                    android:textColor="@color/colorNegro"
                    android:fontFamily="@font/nunito_semibold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:text="@string/vencimientoCuota"
                    android:textSize="14sp"
                    android:textColor="@color/colorNegro"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginBottom="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGrisOscuro"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_bottom_gray"
                    android:paddingHorizontal="20dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/metodoPago"
                        android:textSize="14sp"
                        android:textColor="@color/colorNegro"
                        android:fontFamily="@font/nunito_semibold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/metodoPagoElegido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/metodoPagoElegido"
                        android:textSize="14sp"
                        android:textColor="@color/colorNegro"
                        android:fontFamily="@font/nunito_regular"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/cantCuotas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="X CUOTAS"
                        android:textSize="14sp"
                        android:textColor="@color/colorNegro"
                        android:fontFamily="@font/nunito_regular"
                        android:layout_marginBottom="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/montoFinal"
                            android:textSize="15sp"
                            android:textColor="@color/colorNegro"
                            android:fontFamily="@font/nunito_semibold" />

                        <TextView
                            android:id="@+id/montoNro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/montoNro"
                            android:textSize="15sp"
                            android:textColor="@color/colorNegro"
                            android:fontFamily="@font/nunito_bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Botones -->
            <LinearLayout
                android:id="@+id/btnImpComprobante"
                android:layout_width="200dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:background="@drawable/bg_boton_cuadro"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/impComprobantePagoMensual"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/btnVolver"
                android:layout_width="160dp"
                android:layout_height="48dp"
                android:orientation="vertical"
                android:background="@drawable/bg_boton_cuadro_oscuro"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:layout_marginBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volver"
                    android:textColor="@color/colorBlanco"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito_bold" />
            </LinearLayout>

            <!-- Fondo inferior fijo -->
            <ImageView
                android:id="@+id/fondoInferior"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="bottom"
                android:scaleType="fitXY"
                android:src="@drawable/bg_rectangulo" />

        </LinearLayout>
    </ScrollView>


</FrameLayout>
